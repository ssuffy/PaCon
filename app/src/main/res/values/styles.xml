<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CodeFontTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CodeFontSubtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:color">@color/colorText</item>
        <item name="android:textSize">5dp</item>
    </style>

    <style name="CodeFontBody" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
